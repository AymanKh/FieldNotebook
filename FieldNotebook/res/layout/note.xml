<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/note"
    android:paddingLeft="2dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="10dp">
    <ImageView 
        	android:id="@+id/note_imgColor"
	        android:layout_width="10dp"
	        android:layout_height="50dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="15dp"
        />
    <ImageButton 
            android:id="@+id/note_butShowHide"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
           	/>
    <RelativeLayout
        android:id="@+id/note_row1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_toRightOf="@+id/note_imgColor"
	    android:layout_toLeftOf="@+id/note_butShowHide">
	    <TextView 
	        android:id="@+id/note_txtComment"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:textSize="22sp"
	        android:paddingLeft="7dp"
	        android:ellipsize="end"
	        android:text="Comment"
	        android:textColor="#000"
	        android:singleLine="false"
	        />
   </RelativeLayout>
   <RelativeLayout
        android:id="@+id/note_row2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/note_row1"
	    android:layout_toRightOf="@+id/note_imgColor"
	    android:layout_toLeftOf="@+id/note_butShowHide"
	    android:layout_marginTop="5dp"
	    android:paddingBottom="25dp">
	    <ImageView
            android:id="@+id/note_imgPoints"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:background="#555"
           	/>
	    <ImageView
            android:id="@+id/note_imgLines"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_toRightOf="@+id/note_imgPoints"
	        android:layout_alignParentTop="true"
	        android:background="#333"
           	/>
	    <ImageView
            android:id="@+id/note_imgPolygons"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_toRightOf="@+id/note_imgLines"
	        android:layout_alignParentTop="true"
	        android:background="#000"
           	/>
   </RelativeLayout>
</RelativeLayout>